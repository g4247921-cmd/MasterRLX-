-- üßπ Clean GUI
AddButton("üßπ Bersihkan Semua GUI", Color3.fromRGB(50,80,50), function()
	for _,v in pairs(player.PlayerGui:GetChildren()) do
		if v ~= gui then
			pcall(function() v:Destroy() end)
		end
	end
end)

-- üëª Noclip
local noclip = false
AddButton("üëª Noclip (OFF ‚ùå)", Color3.fromRGB(120,60,60), function()
	noclip = not noclip
	for _,c in pairs(Scroll:GetChildren()) do
		if c:IsA("TextButton") and c.Text:find("Noclip") then
			c.Text = "üëª Noclip ("..(noclip and "ON ‚úÖ" or "OFF ‚ùå")..")"
		end
	end
end)
RunService.Stepped:Connect(function()
	if noclip and char then
		for _,p in pairs(char:GetDescendants()) do
			if p:IsA("BasePart") then p.CanCollide = false end
		end
	end
end)

-- üöÄ Infinite Jump
local infjump = false
AddButton("üöÄ Infinite Jump (OFF ‚ùå)", Color3.fromRGB(60,120,120), function()
	infjump = not infjump
	for _,c in pairs(Scroll:GetChildren()) do
		if c:IsA("TextButton") and c.Text:find("Infinite Jump") then
			c.Text = "üöÄ Infinite Jump ("..(infjump and "ON ‚úÖ" or "OFF ‚ùå")..")"
		end
	end
end)
UserInputService.JumpRequest:Connect(function()
	if infjump and hum then
		hum:ChangeState(Enum.HumanoidStateType.Jumping)
	end
end)

-- üí´ OPEN ANIMATION + SOUND
local intro = Instance.new("Sound", gui)
intro.SoundId = "rbxassetid://9118823106"
intro.Volume = 2
intro:Play()

local clickSFX = Instance.new("Sound", Logo)
clickSFX.SoundId = "rbxassetid://138080026"
clickSFX.Volume = 1

Logo.ImageTransparency = 1
TweenService:Create(Logo, TweenInfo.new(1), {ImageTransparency = 0}):Play()
TweenService:Create(glow, TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true), {Transparency = 0.4}):Play()

Logo.MouseButton1Click:Connect(function()
	clickSFX:Play()
	if not Main.Visible then
		Main.Visible = true
		Main.BackgroundTransparency = 1
		Main.Position = UDim2.new(0.5,-185,1,0)
		TweenService:Create(Main, TweenInfo.new(0.4, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {
			BackgroundTransparency = 0.15,
			Position = UDim2.new(0.5,-185,0.5,-260)
		}):Play()
	else
		TweenService:Create(Main, TweenInfo.new(0.3), {Position = UDim2.new(0.5,-185,1,0)}):Play()
		wait(0.3)
		Main.Visible = false
	end
end)
